<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.client.fragments.MainPageFragment"
        android:label="MainPageFragment" >
        <action
            android:id="@+id/action_mainPageFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_mainPageFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.client.fragments.firstSection.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_firstFragment_to_itemsFragment"
            app:destination="@id/itemsFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.client.fragments.secondSection.SecondFragment"
        android:label="SecondFragment" />
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.example.client.fragments.firstSection.ItemsFragment"
        android:label="ItemsFragment">
        <action
            android:id="@+id/action_itemsFragment_to_firstFragment"
            app:popUpTo="@id/firstFragment"
            app:popUpToInclusive="true"
        />
        <argument
            android:name="category"
            app:argType="string" />
        />
    </fragment>
</navigation>